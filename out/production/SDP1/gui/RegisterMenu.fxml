<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17">
    <center>
        <SplitPane dividerPositions="0.3" prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <items>
                <AnchorPane maxHeight="400.0" maxWidth="180.0" minHeight="400.0" minWidth="180.0" prefHeight="400.0"
                            prefWidth="180.0" style="-fx-background-color: #d3d3d3;">
                    <children>
                        <ImageView fitHeight="139.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/Zatre_board1.jpg"/>
                            </image>
                        </ImageView>
                        <Label layoutX="14.0" layoutY="144.0" text="ZATRE">
                            <font>
                                <Font name="Berlin Sans FB Bold" size="18.0"/>
                            </font>
                        </Label>
                        <Text layoutX="14.0" layoutY="180.0" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Definitely not Scrabble with numbers!" wrappingWidth="130.701171875">
                            <font>
                                <Font name="Berlin Sans FB" size="12.0"/>
                            </font>
                        </Text>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <Label layoutX="14.0" layoutY="20.0" text="%label.provideUserInformation">
                            <font>
                                <Font name="Berlin Sans FB Demi Bold" size="14.0"/>
                            </font>
                        </Label>
                        <Label layoutX="14.0" layoutY="44.0" text="%label.playerName">
                            <font>
                                <Font name="Berlin Sans FB Demi Bold" size="12.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="playerNameTXT" layoutX="14.0" layoutY="59.0" prefHeight="25.0"
                                   prefWidth="146.0" promptText="%label.minFiveCharacters"/>
                        <Label layoutX="15.0" layoutY="92.0" text="%label.yearOfBirth">
                            <font>
                                <Font name="Berlin Sans FB Demi Bold" size="12.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="yearOfBirthTXT" layoutX="14.0" layoutY="107.0" prefHeight="25.0"
                                   prefWidth="147.0" promptText="1950-2020"/>
                        <Button layoutX="14.0" layoutY="150.0" mnemonicParsing="false" onAction="#registerPlayer"
                                prefHeight="20.0" prefWidth="60.0" text="%label.register">
                            <font>
                                <Font name="Berlin Sans FB" size="12.0"/>
                            </font>
                        </Button>
                        <Button layoutX="78.0" layoutY="150.0" mnemonicParsing="false" onAction="#returnToMain"
                                prefHeight="20.0" prefWidth="60.0" text="%label.cancel">
                            <font>
                                <Font name="Berlin Sans FB" size="12.0"/>
                            </font>
                        </Button>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>
