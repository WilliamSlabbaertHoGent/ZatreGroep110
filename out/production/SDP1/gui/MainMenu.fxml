<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <SplitPane dividerPositions="0.3" prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
        <items>
          <AnchorPane maxHeight="400.0" maxWidth="180.0" minHeight="400.0" minWidth="180.0" prefHeight="400.0" prefWidth="180.0" style="-fx-background-color: #d3d3d3;" SplitPane.resizableWithParent="false">
               <children>
                  <ImageView fitHeight="140.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/Zatre_board1.jpg" />
                     </image>
                  </ImageView>
                  <Label layoutX="14.0" layoutY="144.0" text="ZATRE">
                     <font>
                        <Font name="Berlin Sans FB Bold" size="18.0" />
                     </font>
                  </Label>
                  <Text layoutX="14.0" layoutY="180.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Definitely not Scrabble with numbers!" wrappingWidth="130.701171875">
                     <font>
                        <Font name="Berlin Sans FB" size="12.0" />
                     </font>
                  </Text>
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <Label layoutX="14.0" layoutY="20.0" text="%label.selectMenuOption">
                     <font>
                        <Font name="Berlin Sans FB Demi Bold" size="14.0" />
                     </font>
                  </Label>
                  <Button layoutX="14.0" layoutY="44.0" mnemonicParsing="false" onAction="#showRegisterMenu" prefHeight="20.0" prefWidth="100.0" text="%label.registerPlayer">
                     <font>
                        <Font name="Berlin Sans FB" size="12.0" />
                     </font>
                  </Button>
                  <Button layoutX="14.0" layoutY="112.0" mnemonicParsing="false" onAction="#closeApplication" prefHeight="20.0" prefWidth="100.0" text="%label.exitToDesktop">
                     <font>
                        <Font name="Berlin Sans FB" size="12.0" />
                     </font>
                  </Button>
                  <Button layoutX="14.0" layoutY="78.0" mnemonicParsing="false" onAction="#showSelectionMenu" prefHeight="20.0" prefWidth="100.0" text="%label.selectPlayer">
                     <font>
                        <Font name="Berlin Sans FB" size="12.0" />
                     </font>
                  </Button>
                  <Button layoutX="14.0" layoutY="146.0" mnemonicParsing="false" onAction="#getLanguageMenu" prefHeight="20.0" prefWidth="100.0" text="%label.setLanguage">
                     <font>
                        <Font name="Berlin Sans FB" size="12.0" />
                     </font>
                  </Button>
                  <Label fx:id="languageLabel" layoutX="14.0" layoutY="188.0" text="%label.setLanguageLabel" visible="false">
                     <font>
                        <Font name="Berlin Sans FB Demi Bold" size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="languageComboBox" layoutX="14.0" layoutY="212.0" onAction="#switchLanguage" prefHeight="20.0" prefWidth="100.0" visible="false" />
                  <Button layoutX="14.0" layoutY="250.0" mnemonicParsing="false" onAction="#showGameScreen" prefHeight="20.0" prefWidth="100.0" text="Show Game Board">
                     <font>
                        <Font name="Berlin Sans FB" size="12.0" />
                     </font>
                  </Button>
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </center>
</BorderPane>
